                    <%= content_tag(:option, c.first, value: c.last) %>
                  <% end %>
                <% end %>
                <%= f.submit "Submit" %>
              </dd>
            <% end %>
          <% end %>
        </dl>
      </div>
    </div>

  </article>

</section>
