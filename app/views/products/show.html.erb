                <% end %>
                &nbsp;
                <%= r.description %> - <i><%= r.user.first_name %></i>
                &nbsp;
                <% if r.user == current_user %>
                  <%= link_to "Delete", [@product, r], class: 'btn btn-sm btn-danger', method: :delete, data: { confirm: "Are you sure?" } %>
                  <% curr_user_no_rating = false %>
                <% end %>
              </dd>
            <% end %>
          <% end %>
          <% if current_user && curr_user_no_rating%>
            <br>
            <%= form_for([@product, review]) do |f| %>
              <% if f.object.errors.any? %>
                <dd class="alert alert-danger">
                  <strong>The following errors prevented saving:</strong>
                  <ul>
                    <% f.object.errors.full_messages.each do |error| %>
                      <li><%= error %></li>
                    <% end %>
                  </ul>
                </dd>
              <% end %>

              <dd><i>Add a review:</i></dd>
